<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/list_projects"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/list_item_height"
    android:orientation="horizontal"
    android:paddingTop="10dp">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="@dimen/list_workexp_image_width"
        android:layout_height="@dimen/list_item_height"
        android:background="@color/tan_background"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title_text_view"
            style="@style/ListStyle_Skills_1"
            android:layout_width="@dimen/list_workexp_image_width"
            android:layout_height="@dimen/list_item_height" />

        <TextView
            android:id="@+id/language_text_view"
            style="@style/ListStyle_Skills_1"
            android:layout_width="@dimen/list_workexp_image_width"
            android:layout_height="@dimen/list_item_height" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_item_height"
        android:background="@color/category_projects"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/location_text_view"
                style="@style/ListStyle_Education_3"
                android:layout_width="match_parent"
                android:layout_height="@dimen/list_skill_height"
                android:gravity="left"
                tools:text="one" />

            <TextView
                android:id="@+id/duration_text_view"
                style="@style/ListStyle_Education_3"
                android:layout_width="match_parent"
                android:layout_height="@dimen/list_skill_height"
                android:gravity="right"
                tools:text="one" />
        </LinearLayout>

        <TextView
            android:id="@+id/description_text_view"
            style="@style/ListStyle_Skills_2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/list_skill_height"
            tools:text="one" />
    </LinearLayout>

</LinearLayout>